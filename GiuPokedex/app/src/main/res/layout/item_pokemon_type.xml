<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/pokemon_type_container"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:paddingHorizontal="@dimen/margin_xsmall">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/pokemon_type_icon"
        android:layout_width="@dimen/type_icon_size"
        android:layout_height="@dimen/type_icon_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.4"
        tools:src="@drawable/ic_pokemon_type_electric" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/pokemon_type_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_small"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="@id/pokemon_type_icon"
        app:layout_constraintStart_toStartOf="@id/pokemon_type_icon"
        app:layout_constraintTop_toBottomOf="@id/pokemon_type_icon"
        tools:text="Electric"
        tools:textColor="@color/electric" />

</androidx.constraintlayout.widget.ConstraintLayout>